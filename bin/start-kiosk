#!/bin/sh
# TODO: have default path specified on /boot somewhere
# TODO: ensure network is up first
DIR="$(dirname $0)"
DIR="$(realpath "$DIR/..")"

if [ -z "$DISPLAY" ]; then
	export DISPLAY=:0.0
	export LC_ALL=C
fi

xset s off
xset -dpms
xset s noblank

exec firefox-esr \
	--kiosk \
	--disable-pinch \
	--remote-debugging-port=9222 \
	"file://$DIR/html/index.html#$(hostname)"
